
    <link rel="stylesheet" href="/css/login.css"> 

<div class="site-name">
  <h1>
      <span class="meet">MEET</span>
      <span class="me">ME</span>
  </h1>
</div>

<div class="card">

  <div class="card-body">
    
          <h2 class="mb-3"><i class="fas fa-sign-in-alt"></i> Login</h2>

      <form action="/auths/login" method="POST">
          <div class="form-group">
              <label for="email">Email</label>
              <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  value="<%= typeof email != 'undefined' ? email : '' %>"
                  placeholder="Enter Email"
              />
          </div>
          <div class="form-group">
              <label for="password">Password</label>
              <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  value="<%= typeof password != 'undefined' ? password : '' %>"
                  placeholder="Enter Password"
              />
          </div>
          <button type="submit" class="btn">Login</button>
      </form>
      <br>
      <a href="/auths/auth/google/login" class="btn-google btn">Login with Google</a>
      <p class="lead mt-4">
          No Account? <a href="/auths/signup">Sign Up</a>
      </p>
  </div>
</div>
